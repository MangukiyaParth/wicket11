<IfModule mod_php5.c>
    php_flag session.auto_start 1
</IfModule>

<Files .env>
    Order allow,deny
    Deny from all
</Files>

RewriteEngine On
# RewriteBase /product/HTML/android_dashboard/admin_panel/  # Adjust if needed

# Exclude static files from rewrites
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|ico|woff|woff2|ttf|svg|eot)$ [NC]

# Force HTTPS (excluding localhost/192.x.x.x)
RewriteCond %{HTTP_HOST} !^localhost [NC]
RewriteCond %{HTTP_HOST} !^192\. [NC]
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Rewrite rules
RewriteRule ^login?$ login.php [L]
RewriteRule ^logout?$ logout.php [L]
RewriteRule ^page/([^/]+)/?$ manage.php?id=$1 [NC,L]